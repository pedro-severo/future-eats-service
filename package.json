    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0"
  }, 
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": ["prettier ./src --write", "eslint ./src", "git add ."]
