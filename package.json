{
  "name": "future-eats-service",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^8.0.1",
    "@graphql-tools/load": "^8.0.2",
    "@graphql-tools/load-files": "^7.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.23",
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-validator-cpf": "^1.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "firebase-admin": "^12.0.0",
    "graphql": "^16.8.1",
    "graphql-http": "^1.22.0",
    "http-status-codes": "^2.3.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.1",
    "ruru": "^2.0.0-beta.11",
    "ts-node": "^10.9.2",
    "typedi": "^0.10.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "scripts": {
    "start": "NODE_ENV=start nodemon ./src/index.ts",
    "build": "tsc",
    "firebase": "cd firebase && firebase emulators:start --only firestore",
    "test": "concurrently \"yarn firebase\" \"yarn test:run\"",    
    "test:run": "jest --runInBand --detectOpenHandles --forceExit && yarn test:shutdown",
    "test:shutdown": "pkill -f 'firebase emulators:start'",
    "testFile": "yarn test -- --findRelatedTests",
    "coverage": "jest test --coverage --watchAll=false --silent",
    "lint": "eslint ./src",
    "openCoverage": "open coverage/lcov-report/index.html",
    "prettier": "prettier ./src --write",
    "prepush": "yarn coverage",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@firebase/testing": "^0.20.11",
    "@playlyfe/gql": "^2.6.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "ts-jest": "^29.1.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier ./src --write",
      "eslint ./src",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  }
}
